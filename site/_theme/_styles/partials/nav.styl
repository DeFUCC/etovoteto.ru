nav
  display: flex
  flex: 1 1 100px
  flex-flow: row wrap
  justify-content: flex-start
  align-items: center
  min-height: max-content
  margin: 0
  padding: 0
  font-size: 1em

  .menu
    flex: 1 1 200px
    display: flex
    flex-flow: row wrap
    position: sticky
    align-items: center
    justify-content: center
    top: 0

    a, span
      flex: 1 1 auto
      display: flex
      text-decoration: dotted
      color: var(--text-color)
      padding: 1em
      justify-content: center
      transition: all 300ms ease-in-out

      &:hover
        background-color: var(--button-secondary)

    .active
      font-weight: bold
      background-color: var(--top-bar)
