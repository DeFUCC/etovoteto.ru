nav
  display: flex
  flex: 1 1 100px
  flex-flow: row wrap
  justify-content: flex-start
  align-items: center
  min-height: max-content
  margin: 0
  padding: 0
  font-size: 1em
  position: sticky

  a
    font-weight: normal
    flex: 1 1 140px
    display: flex
    align-items: center
    text-decoration: underline
    color: var(--text-color)
    padding: 1em
    justify-content: left
    transition: all 300ms ease-in-out

    &:hover
      background-color: var(--button-secondary)

      > svg
        opacity: 1

    > svg
      display: flex
      align-items: center
      min-width: 1.5em
      min-height: 1.5em
      opacity: 0
      transition: all 300ms ease-in-out
      color: hsla(0, 0%, 0%, 0.4)

    > span
      flex: 1 0 120px

  .active
    background-color: var(--top-bar)
    text-decoration: none

    > svg
      opacity: 0.8
