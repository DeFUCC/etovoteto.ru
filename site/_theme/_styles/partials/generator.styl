#generator
  display: flex
  flex-flow: column
  padding: 6em 0

.word
  margin: 2em 0
  text-align: center
  transition: all 300ms ease-in-out

  h2
    font-size: 2em

.actions
  text-align: center
  line-height: 2em
  user-select: none

  div
    padding: 1em
    background-color: var(--background)
    transition: all 300ms ease-in-out
    cursor: pointer
    text-decoration: underline

    &:hover
      background-color: var(--background-alt)
      text-decoration: none
