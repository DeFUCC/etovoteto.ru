#generator
  margin: 4em 0

  .card
    padding: 2em 0
    text-align: center
    background-color: var(--button-secondary)
    cursor: pointer
    user-select: none
    box-shadow: 0px 12px 16px -4px hsla(0, 0%, 0%, 0.4)
    transition: all 300ms ease-in-out

    &:hover
      box-shadow: 0px 6px 6px -4px hsla(0, 0%, 0%, 0.3)

    h2
      transition: all 300ms ease-in-out