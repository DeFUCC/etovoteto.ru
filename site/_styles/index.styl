@import 'fonts.styl'
@import 'root.styl'

body
  padding: 0
  margin: 0
  color: var(--text-color)
  height: 100%
  width: 100%
  background-color: var(--background)
  font-family: 'Commissioner', sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-size: 15px
  line-height: 1.7em
  word-break: break-word